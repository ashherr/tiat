# Flask settings
SECRET_KEY=your-secret-key-here

# Database settings (SQLite for development, Supabase for production)
# No need to set these values for local development

# Supabase settings (only needed for production)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# Google Calendar settings
ENABLE_GCAL=false  # Set to 'true' to enable Google Calendar integration
GOOGLE_CREDENTIALS_FILE=credentials/service_account.json
GOOGLE_CALENDAR_ID=primary  # Replace with your calendar ID for production 