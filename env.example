# Flask settings
SECRET_KEY=your-secret-key-here

# Database settings (SQLite for development, Supabase for production)
# No need to set these values for local development

# Supabase settings (only needed for production)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# Google Calendar settings
ENABLE_GCAL=false  # Set to 'true' to enable Google Calendar integration
GOOGLE_CALENDAR_ID=primary  # Replace with your calendar ID for production

# OPTION 1: Google credentials via environment variables (PREFERRED, MORE SECURE)
GOOGLE_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret-here
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_JAVASCRIPT_ORIGINS=https://your-domain.com,http://localhost:5000

# OPTION 2: Google credentials via file (LESS SECURE, FALLBACK)
# GOOGLE_CREDENTIALS_FILE=credentials/service_account.json 