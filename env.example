# Flask settings
SECRET_KEY=your-secret-key-here

# Database settings (SQLite for development, Supabase for production)
# No need to set these values for local development

# Supabase settings (only needed for production)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# Google Calendar settings
ENABLE_GCAL=false  # Set to 'true' to enable Google Calendar integration
GOOGLE_CALENDAR_ID=primary  # Replace with your calendar ID for production

# OPTION 1: Google service account via environment variables (PREFERRED, MORE SECURE)
# These values come from your service account JSON file
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here...\n-----END PRIVATE KEY-----\n"
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com

# OPTION 2: Google credentials via file (LESS SECURE, FALLBACK)
# GOOGLE_CREDENTIALS_FILE=credentials/service_account.json 