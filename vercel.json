{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.py",
        "use": "@vercel/python"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/public/$1"
      },
      {
        "src": "/status",
        "dest": "/api/status.py"
      },
      {
        "src": "/recovery",
        "dest": "/api/recovery.py"
      },
      {
        "src": "/api/events",
        "dest": "/api/events.py"
      },
      {
        "src": "/(.*)",
        "dest": "/api/pages.py"
      }
    ],
    "env": {
      "VERCEL": "1"
    },
    "build": {
      "env": {
        "PIP_EXTRA_INDEX_URL": ""
      }
    }
}