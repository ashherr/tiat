{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/status",
        "dest": "/api/status.py"
      },
      {
        "src": "/recovery",
        "dest": "/api/recovery.py"
      },
      {
        "src": "/(.*)",
        "dest": "/api/simple.py"
      }
    ],
    "env": {
      "VERCEL": "1"
    },
    "build": {
      "env": {
        "PIP_EXTRA_INDEX_URL": ""
      }
    }
}